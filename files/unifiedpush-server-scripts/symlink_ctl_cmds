#!/bin/sh
#
# Symlink the ctl commands
DEST_DIR=${1:-/opt/unifiedpush-server}

usr_bin_symlinks="\
  ${DEST_DIR}/bin/unifiedpush-server-ctl \
"
symlink_command="ln -sf ${usr_bin_symlinks} /usr/bin/"

error_exit()
{
  echo "${1:-"Unknown Error"}" 1>&2
  exit 1
}

create_symlinks()
{
  ${symlink_command} || error_exit "Failed to create symlinks in /usr/bin"
}

create_symlinks
